{
  "name": "Rowan - Your Life, Organized",
  "short_name": "Rowan",
  "description": "Collaborative life management for couples and families. Track tasks, expenses, meals, reminders, and more - all in one beautiful app.",
  "start_url": "/",
  "id": "/",
  "display": "standalone",
  "display_override": ["standalone", "minimal-ui"],
  "background_color": "#000000",
  "theme_color": "#000000",
  "orientation": "any",
  "categories": ["productivity", "lifestyle", "utilities", "family"],
  "lang": "en-US",
  "dir": "ltr",
  "scope": "/",
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "icons": [
    {
      "src": "/rowan-logo.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/rowan-logo.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/rowan-logo-maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/mobile-dashboard.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Dashboard - Your day at a glance"
    },
    {
      "src": "/screenshots/mobile-tasks.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Task management made simple"
    },
    {
      "src": "/screenshots/desktop-dashboard.png",
      "sizes": "1280x800",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Full dashboard experience on desktop"
    }
  ],
  "shortcuts": [
    {
      "name": "New Task",
      "short_name": "Task",
      "description": "Create a new task",
      "url": "/tasks?action=new",
      "icons": [
        {
          "src": "/icons/task.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "New Reminder",
      "short_name": "Reminder",
      "description": "Create a new reminder",
      "url": "/reminders?action=new",
      "icons": [
        {
          "src": "/icons/reminder.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Shopping List",
      "short_name": "Shopping",
      "description": "View shopping lists",
      "url": "/shopping",
      "icons": [
        {
          "src": "/icons/shopping.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Calendar",
      "short_name": "Calendar",
      "description": "View calendar events",
      "url": "/calendar",
      "icons": [
        {
          "src": "/icons/calendar.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}
