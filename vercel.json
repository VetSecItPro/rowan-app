{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "github": {
    "silent": false,
    "autoAlias": true
  },
  "crons": [
    {
      "path": "/api/cron/task-jobs?job=reminders",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/task-jobs?job=recurring",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/task-jobs?job=rotation",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/task-jobs?job=cleanup",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/task-jobs?job=refresh-views",
      "schedule": "0 */6 * * *"
    }
  ]
}
